generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int    @id @default(autoincrement())
  username  String
  email     String @unique
  password  String
  dailyGoal Int    @default(2000)
  meals     Meal[]
}

model Meal {
  id       Int      @id @default(autoincrement())
  name     String
  calories Int
  eatenAt  DateTime @default(now())
  userId   Int
  user     User     @relation(fields: [userId], references: [id])
}
